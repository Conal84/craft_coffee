extends base

block content 
  .shop
    .shop-head
      .dropdown.dropdown--filter
        button.dropdown__btn Filter 
        .dropdown__content
          a.dropdown__link(href='#') Roast
          a.dropdown__link(href='#') Price
          a.dropdown__link(href='/shop?bestBrew=wholebean') Brew method - Wholebean
          a.dropdown__link(href='/shop?bestBrew=cafetiere') Brew method - Cafetiere
          a.dropdown__link(href='/shop?bestBrew=filter') Brew method - Filter
      h2.heading-secondary.heading-shop= heading 
      .dropdown.dropdown--sort
        button.dropdown__btn Sort by 
        .dropdown__content.dropdown__content--right
          a.dropdown__link(href='/shop?sort=-ordered') Bestsellers
          a.dropdown__link(href='/shop?sort=-roast') Roast high to low
          a.dropdown__link(href='/shop?sort=roast') Roast low to high 
          a.dropdown__link(href='/shop?sort=dateAdded') Latest added
    hr.hr
    .shop-products
      each product in products
        .card 
          a.card__link(href=`/product/${product._id}`)
            .card__top
              img.card__top__img(src='../img/Roma_Espresso_Blend.png' alt='Product image')
              .card__top__ellipse
            .card__product
              h2.card__product__name.heading-tertiary= product.name
              p.card__product__description.paragraph= product.description
              hr.hr.hr__sm
              .card__product__roast
                p.paragraph--italic Roast level
                p.paragraph--italic= product.roast