extends base

block content 
  .product 
    .product__img
      img(src='../img/Roma_Espresso_Blend.png' alt='Product image')
    .product__info
      form.product__form(action='/cart/add/' method='post')
        .product__name.heading-tertiary Coffee Name
        .product__size
          input.paragraph(label='250g' type='radio' id='250' name='size' value='250g' checked='')
          input.paragraph(label='500g' type='radio' id='500' name='size' value='250g')
          input.paragraph(label='1kg' type='radio' id='1000' name='size' value='1kg')
        .product__roast.paragraph Roast 
        .product__description.paragraph Lorem ipsum dolor sit amet
        .product__grind
          input.paragraph(label='Wholebean' type='radio' id='wholebean' name='grind' value='Wholebean' checked='')
          input.paragraph(label='Cafetiere' type='radio' id='cafetiere' name='grind' value='Cafetiere')
          input.paragraph(label='Filter' type='radio' id='filter' name='grind' value='Filter')
        input(type='submit' value='Submit')
